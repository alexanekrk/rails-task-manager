<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <input type="checkbox" name="task">
    <label for="task"> <%= link_to task.title, task_path(task) %> </label>
    <p><%= link_to ' [Delete]',
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  <% end %>
</ul>

<p> <%= link_to "Add a task", new_task_path %> </p>
